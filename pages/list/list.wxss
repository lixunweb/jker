.local{
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #0068b7;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  font-weight: bold;
}
.title{
  font-size: 36rpx;color: #262626;
  margin: 20rpx 0;
}
