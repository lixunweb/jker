  border-bottom: 1px solid #d8d8d8;
  margin-bottom: 30rpx;
}
.left{
  width: 460rpx;
}
.tag1{
  font-size: 26rpx;
  color: #f6ab00;
  display: block;
}
.txt{
  font-size: 34rpx;
  color: #262626;
  display: block;
  margin: 10rpx 0;
}
.author{
  font-size: 26rpx;
  color: #a3a2a2;
}
.right{
  width: 210rpx;height: 118rpx;
}
