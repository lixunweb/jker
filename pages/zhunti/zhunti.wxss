/* pages/zhunti/zhunti.wxss */
.ztimg{
  height: auto;
  overflow: hidden;
  padding-bottom: 5rpx;
  border-bottom: 5rpx solid #ed6c01;
}
.ztimg image{
  width: 100%;height: 402rpx;
}
.list{
  width: 663rpx;height: auto;
  overflow: hidden;
  margin:30rpx auto;
}
.tit{
  position: relative;
  z-index: 1;
  width: 663rpx;height: 63rpx;
}
.tit image{width: 663rpx;height: 63rpx;}
.tit text{
  display: block;
  position: absolute;
  width: 100%;height: 63rpx;
  line-height: 63rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  text-indent: 40rpx;
  top: 0;
}
.txt{
  display: flex;
  height: auto;
  overflow: hidden;
  margin-top: 20rpx;
}
.timg image{
  width: 125rpx;height: 125rpx; margin-right: 20rpx;
  border-radius: 50%;
  }
.twz text{
  display: block;
  font-size: 28rpx;
  color: #666;
}
.twz text.h1{
  font-size: 32rpx;
  color: #333;font-weight: bold;
  margin: 10rpx 0;
  }