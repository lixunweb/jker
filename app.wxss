/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.header{
  display: flex;
  width: 100%;height: 110rpx;
}
.fixed{
  position: fixed;
  z-index: 100;
  width: 100%;height: 110rpx;
  background:#262626;
  overflow: hidden;
  top: 0;
  display: flex;
}
.logo{
  width:253rpx;height: 52rpx;
  margin: 30rpx 20rpx;
}
.logo image{
  width:253rpx;height: 52rpx;
}
.search{
  width: 313rpx;height: 47rpx;
  position: relative;
  top: 33rpx;
  margin-left: 30rpx;
}
.seimg{
  position: absolute;
  z-index: 1;
}
.seimg image{
  width: 313rpx;height: 47rpx;
}
.seinput{
  position: absolute;
  z-index: 2;
  width: 313rpx;height: 30rpx;
  top: 10rpx;left: 10rpx;
  font-size: 20rpx;
}
.seinput input{
  width: 230rpx;height: 30rpx;
  min-height: 30rpx;
}
.sbtn{
  width: 48rpx;height: 30rpx;
  position: absolute;
  z-index: 2;
  right:20rpx;
  top: 0;
}
.login{
  display: flex;
  height: 90rpx;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
  margin:0 0 0 10rpx;
}
.nav_menu image{
  width: 55rpx;height: 36rpx;
  margin: 40rpx 0 0 30rpx;
}
.banner{
  width:690rpx;height: 455rpx;
  margin:30rpx auto;
  position: relative;
  }
.title_ban{
  position: absolute;
  height: 80rpx;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  z-index: 101;
  bottom: 0;
  font-size: 26rpx;
  color: #fff;
  background: rgba(0,0,0,.8);
}
.banner image,.banner swiper{
  width: 690rpx;height: 455rpx;
}
.home{
  display: flex;
  align-items: center;
  position: fixed;
  width: 40rpx;
  right: 30rpx;bottom: 130rpx;
  height: 200rpx;
  background: rgba(0,0,0,.6);
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  padding: 0 10rpx;
  border-radius: 10rpx;
  z-index: 10;
}
.box{
  width: 690rpx;
  margin: 0 auto;
  overflow: hidden;
}
/*导航 */
.nav_dia{
  position: fixed;
  z-index: 99;
  width: 100%;height: 100%;
  top: 0;
  left: 0;
}
.nav{
  position: fixed;
  z-index: 100;
  top:90rpx;
  right:0;
}
.navtxt{
  width: 230rpx;height: 80rpx;
  background: #d8d8d8;
  border-bottom: 2px solid #000;
  line-height: 80rpx;
  text-align:center;
  font-size: 36rpx;
  color: #262626;
}
.undis{
  display: none;
}
.ad_img{
  height: auto;
  overflow: hidden;
  padding: 20rpx 0 10rpx; 
  border-top:1px solid #d8d8d8;
  border-bottom:1px solid #d8d8d8;
}
.ad_txta{
  font-size: 18rpx;
  color: #d8d8d8;
  border:1px solid #d8d8d8;
  float: left;
  padding: 2rpx 5rpx;
  border-radius: 5rpx;
}
.ad_txtb{
  font-size: 30rpx;
  color: #d8d8d8;
  float: right;
  margin-right: 10rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  z-index: 100;
  width: 100%;height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #2eafd0;
  background: #d8d8d8;
}
.nodata{
  font-size: 30rpx;
  color: #ccc;
  text-align: center;
  margin: 20rpx 0 80rpx;
}
.mb100{margin-bottom: 30rpx;}
.play-btn{
  left: 10rpx;
  bottom: 10rpx;
  position: absolute;
  z-index: 2;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 100%;
}
.play-btn:before{
  position: absolute;
  z-index: 3;
  content: "";
  top: 20%;
  left: 40%;
  width: 0;
  height: 0;
  border-left: solid 25rpx #d8210d;
  border-top: solid 25rpx transparent;
  border-bottom: solid 25rpx transparent;
}
.video-duration{
  position: absolute;
  z-index: 1;
  left: 40rpx;
  bottom: 15rpx;
  width: 200rpx;
  height: 60rpx;
  font-size:30rpx;
  line-height:60rpx;
  color: #fff;
  background-color: #262626;
  border-radius:50rpx;
  text-align: center;
  text-indent: 15rpx;
}
.foot{
  width: 100%;height: 90rpx;
}
.listcom{
  width: 100%;height: auto;
  overflow: hidden;
  display: flex;
}
.tx image{
  width: 100rpx;height: 100rpx;
  border-radius: 50%;
}
.tx{margin-right: 20rpx;}
.h1{
  font-size: 28rpx;
  color: #1b72ae;
}
.h2{
  font-size: 30rpx;
  color: #666;
  line-height: 45rpx;
  margin-top: 10rpx;
}